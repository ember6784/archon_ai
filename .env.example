# ============================================================================
# OPENCLAW ENTERPRISE - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openclaw_enterprise
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# OPENCLAW GATEWAY
# ============================================================================
OPENCLAW_GATEWAY_URL=ws://localhost:18789
OPENCLAW_GATEWAY_TIMEOUT=30

# ============================================================================
# LLM PROVIDERS
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Other providers
# GROQ_API_KEY=
# GOOGLE_API_KEY=
# XAI_API_KEY=
# GLM_API_KEY=

# ============================================================================
# SECURITY
# ============================================================================
# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_BASE_DIR=./data/circuit_breaker

# Siege Mode
SIEGE_MODE_ENABLED=true
SIEGE_MODE_ACTIVATION_HOURS=5
SIEGE_MODE_MAX_TASKS=50
SIEGE_MODE_MAX_HOURS=24

# Safety
SAFETY_CORE_ENABLED=true
AGENCY_TEMPLATES_DIR=./mat/agency_templates

# ============================================================================
# AUDIT & COMPLIANCE
# ============================================================================
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555  # 7 years for compliance
AUDIT_STORAGE=local  # local, s3, gcs
AUDIT_PATH=./data/audit

# Compliance standards
COMPLIANCE_STANDARDS=SOC2,GDPR

# ============================================================================
# MULTI-TENANCY
# ============================================================================
MULTI_TENANT_ENABLED=true
MAX_TENANTS=1000
DEFAULT_TIER=professional

# ============================================================================
# SSO (Optional)
# ============================================================================
SSO_ENABLED=false
SSO_PROVIDER=okta  # okta, azure, google
SSO_CLIENT_ID=your_client_id
SSO_CLIENT_SECRET=your_client_secret
SSO_REDIRECT_URI=http://localhost:8000/auth/callback
SSO_DISCOVERY_URL=https://dev-xxx.okta.com/.well-known/oauth

# ============================================================================
# ENTERPRISE CONFIG
# ============================================================================
# Application
APP_NAME=OpenClaw Enterprise
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# STORAGE
# ============================================================================
# S3 (for audit logs, artifacts)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Or GCS
# GCS_CREDENTIALS_PATH=
# GCS_BUCKET_NAME=

# ============================================================================
# MONITORING
# ============================================================================
# Prometheus
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing (OpenTelemetry)
TRACING_ENABLED=false
TRACING_ENDPOINT=http://jaeger:4317

# ============================================================================
# CHANNELS (Optional - specific credentials)
# ============================================================================
# Telegram
TELEGRAM_BOT_TOKEN=

# Discord
DISCORD_BOT_TOKEN=

# Slack
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=

# WhatsApp
# WhatsApp uses Baileys - configure in Gateway

# ============================================================================
# ALERTS
# ============================================================================
# Email alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_FROM=noreply@openclaw-enterprise.com
ALERT_TO=admin@yourcompany.com

# Webhook alerts
WEBHOOK_URL=

# Telegram alerts
TELEGRAM_ALERT_CHAT_ID=

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
RELOAD=false
PROFILING_ENABLED=false
